@model Root<SchoolInfoViewModel>
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    @if(Model.Data != null)
    {
        <div class="col-md-5 col-12">
            <div class="row bg-warning">
                <div class="col-1 linear-line"></div>
                <div class="col-10 text-start contact-us">
                    <h4 class="text-start">Contact Us</h4>
                </div>
            </div>
            <h1>BaysalPrivateSchool Contact Infotmation</h1>
            <div class="my-contact-item">
                <i class="fa-solid fa-location-dot"></i>
                <p>@Model.Data.Note</p>
            </div>
            <div class="my-contact-item">
                <i class="fa-solid fa-phone"></i>
                <p>@Model.Data.Phone</p>

            </div>
            <div class="my-contact-item">
                <i class="fa-solid fa-envelope"></i>
                <p>@Model.Data.Mail</p>

            </div>
        </div>
    }
    else
    {
        <div class="col-md-5 col-12">@await Html.PartialAsync("_APIErrorPartial")</div>
        
        @* <div class="d-flex justify-content-center align-items-center my-5">
            <h1>@Model.Error</h1>
        </div> *@
    }
    
    <div class="col-md-5 col-12">
        <iframe class="rounded-2 border p-1 w-100 h-100"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3009.138299389688!2d29.004241475785925!3d41.04410461721851!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab7a24975fe5d%3A0xa05d7aa13cfcaf89!2sBah%C3%A7e%C5%9Fehir%20%C3%9Cniversitesi%20Wissen%20Akademie!5e0!3m2!1str!2str!4v1694345219201!5m2!1str!2str"
            height="380" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</div>