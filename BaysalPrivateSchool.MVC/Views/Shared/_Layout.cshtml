<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BaysalPrivateSchool.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BaysalPrivateSchool.MVC.styles.css" asp-append-version="true" />
</head>

<body>
    @* Apply Job buttonuna tıklanınca açılan Modal *@
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="">
        <div class="">
            <div id="slidepanel" class="row mt-5" style="display: none;">
                <div class="my-card col-md-5 col-5">
                    <h1>Teachers Login Here</h1>
                    <form action="#" method="post">
                        <section>
                            <h3>Teachers Login Form</h3>
                            <label for="teacher-input">Email:</label>
                            <input type="email" name="teacher-input" id="teacher-input" value="" />
                            <label for="teacher-pass">Password:</label>
                            <input type="password" name="teacher-pass" id="teacher-pass" value="" />
                            <input class="btn btn-sm btn-primary my-1" type="submit" name="teacherlogin"
                                id="teacherlogin" value="Login" />
                        </section>
                    </form>
                </div>
                <div class="my-card last col-md-5 col-5">
                    <h1>Students Login Here</h1>
                    <form action="#" method="post">
                        <section>
                            <h3>Students Login Form</h3>
                            <label for="student-input">Email:</label>
                            <input type="email" name="student-input" id="student-input" value="" />
                            <label for="student-pass">Password:</label>
                            <input type="password" name="student-pass" id="student-pass" value="" />
                            <input class="btn btn-sm btn-primary my-1" type="submit" name="studentlogin"
                                value="Login" />
                        </section>
                    </form>
                </div>
                <div class="text-center my-1 forget-p"><a class="text-primary "href="">ForgetPassword</a></div>
            </div>
            <div id="loginpanel" class="">
                <ul class="my-d-flex py-2">
                    <li class="">Log In Here &raquo;</li>
                    <li class="" id="toggle">
                        <a id="slideit" href="#">Personal</a>
                        <a id="closeit" style="display: none;" href="#slidepanel">Close Panel</a>
                    </li>
                </ul>
            </div>
            <br class="clear" />
        </div>
    </div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BaysalPrivateSchool</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="About"
                                asp-action="Index">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Student Clubs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Staff</a>
                        </li>
                    </ul>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Apply Job
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BaysalPrivateSchool.MVC - Bilal Baysal Tarafından Hazırlanmıştır. <a asp-area=""
                asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
