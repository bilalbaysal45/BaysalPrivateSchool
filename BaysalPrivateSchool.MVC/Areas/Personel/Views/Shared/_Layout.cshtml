<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BaysalPrivateSchool.MVC</title>
    @await RenderSectionAsync("CssCodes", false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BaysalPrivateSchool.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>

<body>
    
    <div class="Login-section">
    

    </div>
    <header>
        <nav class="my-bg navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Personel" asp-controller="Home" asp-action="Index">BaysalPrivateSchool</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item my-nav-link">
                            <a class="nav-link text-dark" asp-area="Personel" asp-controller="Home" asp-action="Index">PersonelHome</a>
                        </li>
                        <li class="nav-item my-nav-link">
                            <a class="nav-link text-dark" asp-area="Personel" asp-controller="Student" asp-action="Index">StudentHome</a>
                        </li>
                        <li class="nav-item my-nav-link">
                            <a class="nav-link text-dark" asp-area="Personel" asp-controller="Student"
                                asp-action="Notes">Enter Note</a>
                        </li>
                        <li class="nav-item my-nav-link">
                            <a class="nav-link text-dark" asp-area="Personel" asp-controller="News"
                                asp-action="Index">StudentClubNews</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="my-footer border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BaysalPrivateSchool.MVC - Bilal Baysal Tarafından Hazırlanmıştır. <a asp-area=""
                asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
