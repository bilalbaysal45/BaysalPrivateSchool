@model UpdateNoteViewModel
@{
    ViewData["Title"] = "NoteUpdate";
}

@if (Model != null)
{
    <form asp-area="Personel" asp-controller="Student" asp-action="NoteUpdate" method="Post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id">
        <div class="row bg-primary">
            <div class="col-12 text-start contact-us">
                <h4 class="text-start">Update Note</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-6">
                
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>

            </div>
            <div class="col-lg-6 col-6">
                <label asp-for="Point"></label>
                <input asp-for="Point" type="number" class="form-control">
                <span class="text-danger" asp-validation-for="Point"></span>

            </div>
            <div class="col-lg-6 col-12">
                <label asp-for="Description"></label>
                <input asp-for="Description" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="Description"></span>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-12 d-flex justify-content-center align-item-center mt-3">
                <input type="submit" class="btn btn-outline-warning" value="Update"></input>
            </div>
        </div>
    </form>
}
else
{
    <p>Gelen Giden YOk</p>
}