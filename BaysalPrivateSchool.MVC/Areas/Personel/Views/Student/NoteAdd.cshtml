@model AddNoteViewModel
@{
    ViewData["Title"] = "NoteAdd";
    string department = null;
    if (ViewBag.Department != null)
    {
        department = ViewBag.Department.Department.Name;
    }
}

<form asp-area="Personel" asp-controller="Student" asp-action="NoteAdd" method="Post" enctype="multipart/form-data">
    <div class="row bg-primary">
        <div class="col-12 text-start contact-us">
            <h4 class="text-start">Enter New Note</h4>
        </div>
    </div>
    <div class="row">
        @* <div class="col-lg-6 col-6">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control">
        </div> *@
        <div class="col-lg-7 col-12 my-1">
            <label asp-for="Name"></label>
        </div>
        <div class="input-group col-lg-7 col-12 mb-2">
            <select asp-for="Name" class="form-select mx-2" id="inputGroupSelect01">
                <option class="deneme">Midterm</option>
                <option class="deneme">Final</option>
            </select>
        </div>
        <div class="col-lg-7 col-12">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="col-lg-7 col-12">
            <label asp-for="Point"></label>
            <input asp-for="Point" type="number" class="form-control">
            <span class="text-danger" asp-validation-for="Point"></span>
        </div>
        <div class="col-lg-7 col-12 my-1">
            <label asp-for="Description"></label>
        </div>
        <div class="input-group col-lg-7 col-12 mb-2">
            <input type="text" asp-for="Description" class="form-control" value="@if(department != null)@department" readonly>
        </div>
        <div class="col-lg-7 col-12">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-12 d-flex justify-content-center align-item-center mt-3">
            <input type="submit" class="btn btn-outline-warning" value="Add Note"></input>
        </div>
    </div>
</form>