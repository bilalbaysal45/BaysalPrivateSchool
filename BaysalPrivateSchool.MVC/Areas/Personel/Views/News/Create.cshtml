@model AddNewsViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 col-12">
        <form asp-area="Personel" asp-controller="News" asp-action="Create" method="post"
            enctype="multipart/form-data">
            <div class="row bg-primary">
                <div class="col-12 text-start contact-us">
                    <h4 class="text-start">Add News</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-12">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="col-lg-6 col-12">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="col-lg-6 col-12">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-12 d-flex justify-content-center align-item-center mt-3">
                    <input type="submit" class="btn btn-outline-success" value="Save"></input>
                </div>
            </div>
        </form>
    </div>
</div>