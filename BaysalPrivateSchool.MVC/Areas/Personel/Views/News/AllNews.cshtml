@model Root<StudentClubsNewsViewModel>
@{
    ViewData["Title"] = "AllNews";
}

@if (Model.Data != null)
{
    <div class="d-flex justify-content-between align-items-center p-2">
        <h1>@Model.Data.Name News</h1>
        <a class="btn btn-lg btn-success m-2">Add News</a>
    </div>
    @foreach (var news in Model.Data.News)
    {
        <div class="card my-card-personel my-card-container my-2 w-100" style="width: 18rem;">
            <div class="row w-100">
                <div class="col-sm-12 col">
                    <div class="card-body">
                        <h5 class="card-title">@news.Name</h5>
                        <h5 class="card-title">@news.Title</h5>
                        <p class="card-text">@news.Description</p>
                    </div>
                </div>
                <div class="col-sm-12 col d-flex justify-content-center align-items-center">
                    <a class="btn btn-lg btn-warning m-2">Update</a>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="d-flex justify-content-center align-items-center my-5">
        @await Html.PartialAsync("_APIErrorPartial")
    </div>
}