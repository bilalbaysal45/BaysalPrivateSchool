@model UpdateTeacherViewModel
@{
    ViewData["Title"] = "Update";
}

@if (Model != null)
{
    <form asp-area="Personel" asp-controller="Personel" asp-action="Update" method="Post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden">
        <div class="row bg-primary">
            <div class="col-12 text-start contact-us">
                <h4 class="text-start">Update Personel</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-12">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
            <div class="col-lg-6 col-12">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-12">
                <label asp-for="BirthDate"></label>
                <input asp-for="BirthDate" type="date" class="form-control">
                <span class="text-danger" asp-validation-for="BirthDate"></span>
            </div>
            <div class="col-lg-6 col-12">
                <label asp-for="MonthlyFee"></label>
                <input asp-for="MonthlyFee" type="number" class="form-control">
                <span class="text-danger" asp-validation-for="MonthlyFee"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-12">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="col-lg-6 col-12">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-12">
                <label asp-for="CV"></label>
                <textarea asp-for="CV" class="form-control" rows="3"></textarea>
                <span class="text-danger" asp-validation-for="CV"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-12 d-flex justify-content-center align-item-center mt-3">
                <input type="submit" class="btn btn-outline-warning" value="Update"></input>
            </div>
        </div>
    </form>
}
else
{
    <p>Gelen Giden YOk</p>
}
