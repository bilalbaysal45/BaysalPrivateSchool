@model AddTeacherViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 col-12">
        <form asp-area="Personel" asp-controller="Personel" asp-action="Create" method="post"
            enctype="multipart/form-data">
            <div class="row bg-primary">
                <div class="col-12 text-start contact-us">
                    <h4 class="text-start">Add New Personel</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-12">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" type="text" class="form-control">
                </div>
                <div class="col-lg-6 col-12">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" type="text" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-12">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="mail" class="form-control">
                </div>
                <div class="col-lg-6 col-12">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-12">
                    <label asp-for="BirthDate"></label>
                    <input asp-for="BirthDate" type="date" class="form-control">
                </div>
                <div class="col-lg-6 col-12">
                    <label asp-for="MonthlyFee"></label>
                    <input asp-for="MonthlyFee" type="number" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-12">
                    <label asp-for="CV"></label>
                    <textarea asp-for="CV" class="form-control" rows="2"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <p>Department</p>
                @foreach (var department in ViewBag.Departments)
                {
                    <div class="form-check form-check-inline">
                        <input asp-for="DepartmentId" class="form-check-input" type="radio" name="DepartmentId" id="department_@department.Id" value="@department.Id">
                        <label asp-for="DepartmentId" class="form-check-label" for="department_@department.Id">@department.Name</label>
                    </div>
                }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-12 d-flex justify-content-center align-item-center mt-3">
                    <input type="submit" class="btn btn-outline-success" value="Save"></input>
                </div>
            </div>
        </form>
    </div>
</div>